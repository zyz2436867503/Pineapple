<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/dp_5"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_brand_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:scaleType="centerCrop"
        android:src="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/lay_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/iv_brand_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_brand_text">

        <TextView
            android:id="@+id/tv_brand_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1531311321321"
            android:textColor="#fff"
            android:textSize="@dimen/dp_20" />

        <TextView
            android:id="@+id/tv_brand_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:textColor="#fff"
            android:textSize="@dimen/dp_20" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>