<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_favorites_pic"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_80"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_favorites_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        android:text="拼接"
        app:layout_constraintLeft_toRightOf="@+id/iv_favorites_pic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_favorites_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="三角"
        app:layout_constraintLeft_toRightOf="@+id/iv_favorites_pic"
        app:layout_constraintTop_toBottomOf="@+id/tv_favorites_name" />

    <TextView
        android:id="@+id/tv_favorites_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="100"
        app:layout_constraintLeft_toRightOf="@+id/iv_favorites_pic"
        app:layout_constraintTop_toBottomOf="@id/tv_favorites_title" />

</androidx.constraintlayout.widget.ConstraintLayout>