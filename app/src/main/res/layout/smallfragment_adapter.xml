<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:layout_margin="@dimen/dp_5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_small"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_200"
        android:layout_marginTop="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/dp_18"
        app:layout_constraintLeft_toLeftOf="@id/iv_small"
        app:layout_constraintRight_toRightOf="@id/iv_small"
        app:layout_constraintTop_toBottomOf="@id/iv_small" />

    <TextView
        android:id="@+id/tv_small_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/dp_16"
        android:textColor="#CD1A1A"
        app:layout_constraintLeft_toLeftOf="@id/iv_small"
        app:layout_constraintRight_toRightOf="@id/iv_small"
        app:layout_constraintTop_toBottomOf="@id/tv_small" />


</androidx.constraintlayout.widget.ConstraintLayout>